{
    "$defs": {
        "AttitudeEnum": {
            "enum": [
                "friendly",
                "afraid",
                "enemy"
            ],
            "title": "AttitudeEnum",
            "type": "string"
        },
        "Character": {
            "additionalProperties": false,
            "properties": {
                "name": {
                    "description": "Unique character name",
                    "minLength": 3,
                    "title": "Name",
                    "type": "string"
                },
                "sprite": {
                    "description": "Must be valid asset folder name (assets/[ASSET_PACK]/characters/[sprite])",
                    "minLength": 3,
                    "title": "Sprite",
                    "type": "string"
                },
                "race": {
                    "allOf": [
                        {
                            "$ref": "#/$defs/RaceEnum"
                        }
                    ],
                    "description": "Base character race (e.g. humanoid, animal)"
                },
                "attitude": {
                    "allOf": [
                        {
                            "$ref": "#/$defs/AttitudeEnum"
                        }
                    ],
                    "description": "Attitude towards the player"
                },
                "health": {
                    "default": 30,
                    "description": "initial health value",
                    "minimum": 0,
                    "title": "Health",
                    "type": "integer"
                },
                "max_health": {
                    "default": 30,
                    "description": "maximal health value",
                    "minimum": 0,
                    "title": "Max Health",
                    "type": "integer"
                },
                "items": {
                    "description": "list of character's items",
                    "items": {
                        "type": "string"
                    },
                    "title": "Items",
                    "type": "array"
                },
                "max_carry_weight": {
                    "default": 15.0,
                    "description": "maximal carrying weight in kg",
                    "minimum": 0.0,
                    "title": "Max Carry Weight",
                    "type": "number"
                },
                "money": {
                    "default": 0,
                    "description": "initial amount of possessed money",
                    "minimum": 0,
                    "title": "Money",
                    "type": "integer"
                },
                "damage": {
                    "default": 10,
                    "description": "amount of damage delt to others",
                    "minimum": 0,
                    "title": "Damage",
                    "type": "integer"
                },
                "speed_walk": {
                    "default": 30,
                    "description": "walking speed",
                    "gr": 0,
                    "title": "Speed Walk",
                    "type": "integer"
                },
                "speed_run": {
                    "default": 40,
                    "description": "walking speed",
                    "gr": 0,
                    "title": "Speed Run",
                    "type": "integer"
                }
            },
            "required": [
                "name",
                "sprite",
                "race",
                "attitude"
            ],
            "title": "Character",
            "type": "object"
        },
        "Chest": {
            "additionalProperties": false,
            "properties": {
                "name": {
                    "description": "Chest display name",
                    "minLength": 3,
                    "title": "Name",
                    "type": "string"
                },
                "is_small": {
                    "default": true,
                    "description": "Is it small or big",
                    "title": "Is Small",
                    "type": "boolean"
                },
                "is_closed": {
                    "default": true,
                    "description": "Is it closed or open",
                    "title": "Is Closed",
                    "type": "boolean"
                },
                "items": {
                    "description": "list of items in the chest",
                    "items": {
                        "type": "string"
                    },
                    "title": "Items",
                    "type": "array"
                }
            },
            "required": [
                "name"
            ],
            "title": "Chest",
            "type": "object"
        },
        "Item": {
            "additionalProperties": false,
            "properties": {
                "name": {
                    "description": "Item display name",
                    "minLength": 3,
                    "title": "Name",
                    "type": "string"
                },
                "type": {
                    "allOf": [
                        {
                            "$ref": "#/$defs/ItemTypeEnum"
                        }
                    ],
                    "description": "Item type (e.g. weapon, tool, consumable)"
                },
                "value": {
                    "default": 50,
                    "description": "Monetary value",
                    "minimum": 0,
                    "title": "Value",
                    "type": "integer"
                },
                "health_impact": {
                    "default": 0,
                    "description": "The impact on health when consumed (e.g. apple => +30, poison => -10)",
                    "minimum": 0,
                    "title": "Health Impact",
                    "type": "integer"
                },
                "in_use": {
                    "default": false,
                    "description": "Whether the item is currently in use",
                    "title": "In Use",
                    "type": "boolean"
                },
                "count": {
                    "default": 1,
                    "description": "Number of items in the stack",
                    "minimum": 1,
                    "title": "Count",
                    "type": "integer"
                },
                "weight": {
                    "default": 1.0,
                    "description": "Weight of single item in the stack in kg",
                    "minimum": 0.0,
                    "title": "Weight",
                    "type": "number"
                },
                "damage": {
                    "default": 10,
                    "description": "The amount of damage delt (weapon only)",
                    "minimum": 0,
                    "title": "Damage",
                    "type": "integer"
                },
                "cooldown_time": {
                    "default": 1.0,
                    "description": "The amount of time in seconds it takes to use the weapon again",
                    "minimum": 0.0,
                    "title": "Cooldown Time",
                    "type": "number"
                }
            },
            "required": [
                "name",
                "type"
            ],
            "title": "Item",
            "type": "object"
        },
        "ItemTypeEnum": {
            "enum": [
                "weapon",
                "key",
                "consumable",
                "money"
            ],
            "title": "ItemTypeEnum",
            "type": "string"
        },
        "RaceEnum": {
            "enum": [
                "humanoid",
                "animal",
                "monster"
            ],
            "title": "RaceEnum",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "properties": {
        "characters": {
            "additionalProperties": {
                "$ref": "#/$defs/Character"
            },
            "title": "Characters",
            "type": "object"
        },
        "items": {
            "additionalProperties": {
                "$ref": "#/$defs/Item"
            },
            "title": "Items",
            "type": "object"
        },
        "chests": {
            "additionalProperties": {
                "$ref": "#/$defs/Chest"
            },
            "title": "Chests",
            "type": "object"
        },
        "$schema": "./config_schema.json"
    },
    "required": [
        "characters",
        "items",
        "chests"
    ],
    "title": "ConfigForSchemaGen",
    "type": "object"
}