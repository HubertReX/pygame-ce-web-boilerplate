{
    "$defs": {
        "AttitudeEnum": {
            "enum": [
                "friendly",
                "afraid",
                "enemy"
            ],
            "title": "AttitudeEnum",
            "type": "string"
        },
        "Character": {
            "properties": {
                "name": {
                    "description": "Unique character name",
                    "minLength": 3,
                    "rozen": true,
                    "title": "Name",
                    "type": "string"
                },
                "sprite": {
                    "description": "Must be valid asset folder name (assets/[ASSET_PACK]/characters/[sprite])",
                    "minLength": 3,
                    "title": "Sprite",
                    "type": "string"
                },
                "race": {
                    "allOf": [
                        {
                            "$ref": "#/$defs/RaceEnum"
                        }
                    ],
                    "description": "Base character race (e.g. humanoid, animal)"
                },
                "attitude": {
                    "allOf": [
                        {
                            "$ref": "#/$defs/AttitudeEnum"
                        }
                    ],
                    "description": "Attitude towards the player"
                },
                "health": {
                    "default": 30,
                    "description": "initial health value",
                    "minimum": 0,
                    "title": "Health",
                    "type": "integer"
                },
                "max_health": {
                    "default": 30,
                    "description": "maximal health value",
                    "minimum": 0,
                    "title": "Max Health",
                    "type": "integer"
                },
                "money": {
                    "default": 0,
                    "description": "initial amount of possessed money",
                    "minimum": 0,
                    "title": "Money",
                    "type": "integer"
                },
                "damage": {
                    "default": 10,
                    "description": "amount of damage delt to others",
                    "minimum": 0,
                    "title": "Damage",
                    "type": "integer"
                }
            },
            "required": [
                "name",
                "sprite",
                "race",
                "attitude"
            ],
            "title": "Character",
            "type": "object"
        },
        "Item": {
            "properties": {
                "name": {
                    "description": "Unique item name",
                    "minLength": 3,
                    "rozen": true,
                    "title": "Name",
                    "type": "string"
                },
                "type": {
                    "allOf": [
                        {
                            "$ref": "#/$defs/ItemTypeEnum"
                        }
                    ],
                    "description": "Item type (e.g. weapon, tool, consumable)"
                },
                "value": {
                    "default": 50,
                    "description": "Monetary value",
                    "minimum": 0,
                    "title": "Value",
                    "type": "integer"
                },
                "health_impact": {
                    "default": 0,
                    "description": "The impact on health when consumed (e.g. apple => +30, poison => -10)",
                    "minimum": 0,
                    "title": "Health Impact",
                    "type": "integer"
                },
                "in_use": {
                    "default": false,
                    "description": "Whether the item is currently in use",
                    "title": "In Use",
                    "type": "boolean"
                },
                "damage": {
                    "default": 10,
                    "description": "The amount of damage delt (weapon only)",
                    "minimum": 0,
                    "title": "Damage",
                    "type": "integer"
                },
                "cooldown_time": {
                    "default": 1.0,
                    "description": "The amount of time in seconds it takes to use the weapon again",
                    "minimum": 0.0,
                    "title": "Cooldown Time",
                    "type": "number"
                }
            },
            "required": [
                "name",
                "type"
            ],
            "title": "Item",
            "type": "object"
        },
        "ItemTypeEnum": {
            "enum": [
                "weapon",
                "key",
                "consumable",
                "money"
            ],
            "title": "ItemTypeEnum",
            "type": "string"
        },
        "RaceEnum": {
            "enum": [
                "humanoid",
                "animal",
                "monster"
            ],
            "title": "RaceEnum",
            "type": "string"
        }
    },
    "properties": {
        "characters": {
            "additionalProperties": {
                "$ref": "#/$defs/Character"
            },
            "title": "Characters",
            "type": "object"
        },
        "items": {
            "additionalProperties": {
                "$ref": "#/$defs/Item"
            },
            "title": "Items",
            "type": "object"
        }
    },
    "required": [
        "characters",
        "items"
    ],
    "title": "Config",
    "type": "object"
}